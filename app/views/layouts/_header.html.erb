<nav class="navbar navbar-default navbar-fixed-top">

<%= link_to "Project Pomodoro", root_path, class: "navbar-brand" %>

<% if user_signed_in? %>
  <%= link_to "Log out", logout_path, class: "btn btn-default navbar-btn" %>

<% else %>

  <%= form_tag(login_path, method: 'post') do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log in", class: "btn btn-default navbar-btn" %> or
    <%= link_to "Sign up", signup_path, class: "btn btn-default navbar-btn" %>
  <% end %>

<% end %>

<% flash.each do |k, message| %>
  <div class="alert alert-danger"><%= message %></div>
<% end %>

</nav>
