<div class="task_form" data-id="<%= task.id %>">
  <div class="task_name">
    <%= task.name %><br />
  </div>
  Pomodoros completed: <%= task.pomodoros %><br />
  <%= button_to "Start a new pomodoro for this task", user_task_timers_path(current_user, task), class: "timer_button" %>
  <%= button_to "Delete this task", user_task_path(current_user, task), method: "delete", remote: true %>
  <br />
</div>
