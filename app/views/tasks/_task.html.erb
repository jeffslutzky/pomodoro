<div class="task_parent hide_form">
  <%= form_for [current_user, task], remote: true do |f| %>
    <%= f.text_field :name %>
  <% end %>


  <div class="task_form" data-id="<%= task.id %>">
    <div class="task_name">
      <%= task.name %>
    </div>
    Completed pomodoros: <div class="pomodoros"><%= task.timers.count %></div>

    <%= button_to "Start a pomodoro", user_task_timers_path(current_user, task), class: "start_button", remote: true %>

    <div class="timer"></div>
    <%= button_to "Delete this task", user_task_path(current_user, task), class: "delete", method: "delete", remote: true %>
    <br />
  </div>



</div>
